@model EDO.UI.WebUI.Models.Registration.BusinessBase

<div class="form-group">
    <fieldset>
        <legend>&nbsp;</legend>
        <div class="form-group">
            @Html.Label("Полное название компании", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", placeholder = "Введите полное название компании" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Краткое название компании", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.ShortName, new { @class = "form-control", placeholder = "Введите краткое название компании" })
            </div>
        </div>
    </fieldset>
    <fieldset>
        <legend>&nbsp;</legend>
        <div class="form-group">
            @Html.Label("ИНН", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.Inn, new { @class = "form-control", placeholder = "" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("ОГРН", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.Ogrn, new { @class = "form-control", placeholder = "" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("КПП", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.Kpp, new { @class = "form-control", placeholder = "" })
            </div>
        </div>
    </fieldset>
    <fieldset>
        <legend>&nbsp;</legend>
        <div class="form-group">
            @Html.Label("Телефон", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.MainPhone, new { @class = "form-control", placeholder = "" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Факс", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.MainFax, new { @class = "form-control", placeholder = "" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("E-Mail", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.MainEmail, new { @class = "form-control", placeholder = "" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Дополнительные E-Mail", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.AdditionalEmails, new { @class = "form-control", placeholder = "" })
            </div>
        </div>
    </fieldset>
    <fieldset>
        <legend>&nbsp;</legend>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(x => x.IsAccreditationStatement)
                        Заявление на аккредитацию
                        <span class="help-block">
                            ознакомиться можно <a href="~/Content/docs/etp-reglament.pdf" target="_blank">здесь</a>
                        </span>
                    </label>
                </div>
            </div>
        </div>        
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(x => x.IsInvoiceStatement)
                        Открыть персональный счет для проведения операций на площадке
                    </label>
                </div>
            </div>
        </div>    
    </fieldset>
</div>
